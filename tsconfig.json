{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "outDir": "dist",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "declaration": false,
    "sourceMap": false,
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "*": [
        "node_modules/*",
        "src/*",
        ".data/*"
      ]
    }
  },
  "include": [
    "src/**/*.json",
    "src/**/*",
    ".data/**/*"
  ]
}
